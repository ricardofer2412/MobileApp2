


<h1>Purchase Orders</h1>
<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>PO #</th>
      <th>Customer Name</th>
      <th>E-mail</th>
      <th>Payable to:</th>
      <th>Status</th>
      <th>Payment Terms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.ponumber %></td>
        <td><%= order.custumer_name %></td>
        <td><%= order.email %></td>
        <td><%= order.payable %></td>
        <td><%= order.status %></td>
        <td><%= order.terms %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
